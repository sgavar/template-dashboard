@{
    ViewBag.Title = "Delete User";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="dashboard_graph">
            <div class="row x_title">
                <div class="col-md-12">
                    <h3><strong>Delete User</strong></h3>
                </div>
            </div>
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div id="placeholder33" style="height: 260px; display: none" class="demo-placeholder"></div>
                <div style="width: 60%;">
                    <form asp-controller="Admin" asp-action="DeleteUser" method="post" class="form-horizontal" role="form">
                        <div class="form-group">
                            Are you sure you want to <i>Delete User</i>?
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Delete User" class="btn btn-danger" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="button" value="Cancel" onclick="location.href='@Url.Action("EditUser","Admin")'" class="btn btn-default pull-left" />
                            </div>
                        </div>
                    </form>
                </div>

            </div>
            
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<br />
