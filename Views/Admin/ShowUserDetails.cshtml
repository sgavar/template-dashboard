@model TrackingSystem.Models.AdminViewModels.AdminUserViewModel
@using TrackingSystem.Controllers
@using System.Globalization

@{
    ViewData["Title"] = "Users List";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="dashboard_graph">
            <div class="row x_title">
                <div class="col-md-12">
                    <h3><strong>Users List</strong></h3>
                </div>
            </div>
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div id="placeholder33" style="height: 260px; display: none" class="demo-placeholder"></div>
                <div style="width: 60%;">

                    <table id="usersList" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0"  style="font-size:15px; border:solid black" >
                        <thead>
                            <tr>
                                <th style="border:1px solid black;background-color:maroon;color:white">Username</th>
                                <th style="border:1px solid black;background-color:maroon;color:white">Group</th>

                                <th style="border:1px solid black;background-color:maroon;color:white">Edit</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var usr in AdminController.usrList)
                            {
                                ViewBag.UserName = CultureInfo.CurrentCulture.TextInfo.ToUpper(usr.UserName);
                                <tr>
                                    <td>
                                        @ViewBag.UserName
                                    </td>
                                    <td>
                                        @usr.GroupName
                                    </td>

                                    <td>
                                        <form asp-controller="Admin" asp-action="EditUser" method="post" class="form-horizontal" role="form">
                                            <input type="hidden" name="id" value="@usr.UserId" />
                                            <button type="submit" class="btn-default btn" >
                                                <i class="fa fa-cog" aria-hidden="true"></i> Settings
                                            </button>
                                        </form>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>

                </div>

            </div>
           
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<br />

<script src="~/js/admin.js"></script>
